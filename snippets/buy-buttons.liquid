{% comment %}
  Renders product buy-buttons.
  Accepts:
  - product: {Object} product object.
  - block: {Object} passing the block information.
  - product_form_id: {String} product form id.
  - section_id: {String} id of section to which this snippet belongs.
  - show_pickup_availability: {Boolean} for the pickup availability.

  Usage:
  {% render 'buy-buttons', block: block, product: product, product_form_id: product_form_id, section_id: section.id, show_pickup_availability: true %}
{% endcomment %}

{%- liquid
  assign v = product.selected_or_first_available_variant

  # 1) Choisir la référence (override variante > produit)
  assign preorder_ref = product.metafields.custom.preorder
  if v and v.metafields and v.metafields.custom and v.metafields.custom.preorder_override
    assign preorder_ref = v.metafields.custom.preorder_override
  endif

  # 2) Déréférencer (.value si nécessaire)
  assign ps = null
  if preorder_ref
    if preorder_ref.value
      assign ps = preorder_ref.value
    else
      assign ps = preorder_ref
    endif
  endif

  # 3) Champs
  assign enabled = false
  if ps and ps.enabled
    assign enabled = true
  endif

  assign max = 0
  if ps and ps.max
    assign max = ps.max | plus: 0
  endif

  # état stock & politique d'inventaire
  assign has_no_stock = false
  if v and v.inventory_quantity <= 0
    assign has_no_stock = true
  endif

  assign can_backorder = false
  if v and v.inventory_policy == 'continue'
    assign can_backorder = true
  endif

  # Cap (0 = illimité) : cap atteint si inventaire <= -max
  assign cap_reached = false
  assign limit_allows = true
  if max and max > 0
    assign neg_max = 0 | minus: max
    if v and v.inventory_quantity <= neg_max
      assign limit_allows = false
      assign cap_reached = true
    endif
  endif

  # Autorisation précommande & blocages
  assign allow_preorder = false
  if enabled and has_no_stock and can_backorder and limit_allows
    assign allow_preorder = true
  endif

  assign must_block_purchase = false
  if has_no_stock and can_backorder and enabled == false
    assign must_block_purchase = true
  endif

  # Bloqué si cap atteint OU blocage demandé
  assign blocked = false
  if must_block_purchase
    assign blocked = true
  endif
  if cap_reached
    assign blocked = true
  endif

  # Désactivation du bouton
  assign disable_button = false
  if blocked
    assign disable_button = true
  endif
  if v and v.available == false and allow_preorder == false
    assign disable_button = true
  endif

  # Paiement accéléré visible seulement si non bloqué et (dispo ou préco)
  assign show_payment_button = false
  if blocked == false
    if v
      if v.available or allow_preorder
        assign show_payment_button = true
      endif
    endif
  endif

  # ETA (jours -> date estimée)
  assign eta_days = 0
  if ps and ps.eta
    assign eta_days = ps.eta | plus: 0
  endif
  assign now_ts = 'now' | date: '%s' | plus: 0
  assign eta_seconds = eta_days | times: 86400
  assign ship_ts = now_ts | plus: eta_seconds
  assign ship_date_iso = ship_ts | date: '%Y-%m-%d'
  assign ship_date_human = ship_ts | date: '%-d %B %Y'
-%}

<div {{ block.shopify_attributes }}>
  {%- if product != blank -%}
    {%- liquid
      assign gift_card_recipient_feature_active = false
      if block.settings.show_gift_card_recipient and product.gift_card?
        assign gift_card_recipient_feature_active = true
      endif

      assign show_dynamic_checkout = false
      if block.settings.show_dynamic_checkout and gift_card_recipient_feature_active == false
        assign show_dynamic_checkout = true
      endif
    -%}

    <product-form
      class="product-form"
      data-hide-errors="{{ gift_card_recipient_feature_active }}"
      data-section-id="{{ section.id }}"
    >
      <div class="product-form__error-message-wrapper" role="alert" hidden>
        <span class="svg-wrapper">
          {{- 'icon-error.svg' | inline_asset_content -}}
        </span>
        <span class="product-form__error-message"></span>
      </div>

      {%- form 'product',
        product,
        id: product_form_id,
        class: 'form',
        novalidate: 'novalidate',
        data-type: 'add-to-cart-form'
      -%}
        <input
          type="hidden"
          name="id"
          value="{{ product.selected_or_first_available_variant.id }}"
          {% if product.selected_or_first_available_variant.available == false
            or quantity_rule_soldout
            or product.selected_or_first_available_variant == null
          %}
            disabled
          {% endif %}
          class="product-variant-id"
        >

        {%- if gift_card_recipient_feature_active -%}
          {%- render 'gift-card-recipient-form', product: product, form: form, section: section -%}
        {%- endif -%}

        <div class="product-form__buttons">
          {%- liquid
            assign check_against_inventory = true
            if product.selected_or_first_available_variant.inventory_management != 'shopify' or product.selected_or_first_available_variant.inventory_policy == 'continue'
              assign check_against_inventory = false
            endif
            if product.selected_or_first_available_variant.quantity_rule.min > product.selected_or_first_available_variant.inventory_quantity and check_against_inventory
              assign quantity_rule_soldout = true
            endif
          -%}

          <!-- Placeholders contrôlés par JS (fallback Liquid initial inclus) -->
          <span id="preorder-props-{{ section_id }}">
            {%- if allow_preorder -%}
              <input type="hidden" name="properties[Preorder]" value="true">
              {%- if eta_days and eta_days > 0 -%}
                <input type="hidden" name="properties[Estimated shipping]" value="{{ ship_date_iso }}">
              {%- endif -%}
            {%- endif -%}
          </span>

          <button
            id="ProductSubmitButton-{{ section_id }}"
            type="submit"
            name="add"
            class="product-form__submit button button--full-width {% if show_dynamic_checkout %}button--secondary{% else %}button--primary{% endif %}"
            {%- if disable_button -%}
              disabled aria-disabled="true"
            {%- endif -%}
            data-label-preorder="{{ 'products.product.preorder' | t }}"
            data-label-add="{{ 'products.product.add_to_cart' | t }}"
            data-label-soldout="{{ 'products.product.sold_out' | t }}"
          >
            <span>
              {%- if product.selected_or_first_available_variant == null -%}
                {{ 'products.product.unavailable' | t }}
              {%- elsif allow_preorder -%}
                {{ 'products.product.preorder' | t }}
              {%- elsif blocked -%}
                {{ 'products.product.sold_out' | t }}
              {%- elsif v.available -%}
                {{ 'products.product.add_to_cart' | t }}
              {%- else -%}
                {{ 'products.product.sold_out' | t }}
              {%- endif -%}
            </span>
            {%- render 'loading-spinner' -%}
          </button>

          <div
            id="preorder-dynamic-{{ section_id }}"
            class="mt-3 text-sm"
            data-i18n-eta-template="{{ 'products.product.estimated_shipping_on_date' | t }}"
            {%- if allow_preorder == false or eta_days == 0 -%}
              hidden
            {%- endif -%}
          >
            {%- if allow_preorder and eta_days and eta_days > 0 -%}
              <p>Expédition estimée&nbsp;: {{ ship_date_human }} ({{ eta_days }} jours).</p>
            {%- endif -%}
          </div>

          {%- if show_dynamic_checkout -%}
            {%- if show_payment_button -%}
              {{ form | payment_button }}
            {%- endif -%}
          {%- endif -%}
        </div>
      {%- endform -%}
      <script
        type="application/json"
        id="preorder-config-{{ section_id }}"
        data-section-id="{{ section_id }}"
        data-form-id="{{ product_form_id }}"
      >
        {
        {%- for variant in product.variants -%}
          {%- liquid
            assign vps_ref = product.metafields.custom.preorder
            if variant.metafields and variant.metafields.custom and variant.metafields.custom.preorder_override
              assign vps_ref = variant.metafields.custom.preorder_override
            endif

            assign vps = nil
            if vps_ref
              if vps_ref.value
                assign vps = vps_ref.value
              else
                assign vps = vps_ref
              endif
            endif

            assign ve = false
            if vps and vps.enabled
              assign ve = true
            endif

            assign vmax = 0
            if vps and vps.max
              assign vmax = vps.max | plus: 0
            endif

            assign veta = 0
            if vps and vps.eta
              assign veta = vps.eta | plus: 0
            endif

            assign v_can_backorder = false
            if variant.inventory_policy == 'continue'
              assign v_can_backorder = true
            endif

            assign v_has_no_stock = false
            if variant.inventory_quantity <= 0
              assign v_has_no_stock = true
            endif

            # cap
            assign v_cap_reached = false
            assign v_limit_allows = true
            if vmax and vmax > 0
              assign negmax = 0 | minus: vmax
              if variant.inventory_quantity <= negmax
                assign v_limit_allows = false
                assign v_cap_reached = true
              endif
            endif

            assign v_allow_preorder = false
            if ve and v_has_no_stock and v_can_backorder and v_limit_allows
              assign v_allow_preorder = true
            endif

            assign v_must_block_purchase = false
            if v_has_no_stock and v_can_backorder and ve == false
              assign v_must_block_purchase = true
            endif

            assign v_blocked = false
            if v_must_block_purchase
              assign v_blocked = true
            endif
            if v_cap_reached
              assign v_blocked = true
            endif

            # décision finale (sans fuite d’inventaire)
            assign v_purchasable = false
            if v_blocked == false
              if variant.available or v_allow_preorder
                assign v_purchasable = true
              endif
            endif
          -%}
          "{{ variant.id }}": {
            "available": {{ variant.available | json }},
            "allow_preorder": {{ v_allow_preorder | json }},
            "blocked": {{ v_blocked | json }},
            "purchasable": {{ v_purchasable | json }},
            "eta_days": {{ veta | json }},
            "options": {{ variant.options | json }}
          }{%- unless forloop.last -%},{%- endunless -%}
        {%- endfor -%}
        }
      </script>

      <!-- CHARGEMENT DU JS EXTERNE -->
      <script src="{{ 'preorder.js' | asset_url }}" defer></script>
    </product-form>
  {%- else -%}
    <div class="product-form">
      <div class="product-form__buttons form">
        <button
          type="submit"
          name="add"
          class="product-form__submit button button--full-width button--primary"
          disabled
        >
          {{ 'products.product.sold_out' | t }}
        </button>
      </div>
    </div>
  {%- endif -%}

  {%- if show_pickup_availability -%}
    {{ 'component-pickup-availability.css' | asset_url | stylesheet_tag }}

    {%- assign pick_up_availabilities = product.selected_or_first_available_variant.store_availabilities
      | where: 'pick_up_enabled', true
    -%}

    <pickup-availability
      class="product__pickup-availabilities quick-add-hidden"
      {% if product.selected_or_first_available_variant.available and pick_up_availabilities.size > 0 %}
        available
      {% endif %}
      data-root-url="{{ routes.root_url }}"
      data-variant-id="{{ product.selected_or_first_available_variant.id }}"
      data-has-only-default-variant="{{ product.has_only_default_variant }}"
      data-product-page-color-scheme="gradient color-{{ section.settings.color_scheme }}"
    >
      <template>
        <pickup-availability-preview class="pickup-availability-preview">
          <span class="svg-wrapper">
            {{- 'icon-unavailable.svg' | inline_asset_content -}}
          </span>
          <div class="pickup-availability-info">
            <p class="caption-large">{{ 'products.product.pickup_availability.unavailable' | t }}</p>
            <button class="pickup-availability-button link link--text underlined-link">
              {{ 'products.product.pickup_availability.refresh' | t }}
            </button>
          </div>
        </pickup-availability-preview>
      </template>
    </pickup-availability>

    <script src="{{ 'pickup-availability.js' | asset_url }}" defer="defer"></script>
  {%- endif -%}
</div>
